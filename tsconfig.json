{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "esModuleInterop": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "lib": ["es6", "es2015.promise", "es2018", "dom"]
  },
  "include": ["**/*.ts", "**/*.vue", "server"],
  "exclude": ["node_modules"],
  "typeRoots": ["node_modules/@types"]
}
